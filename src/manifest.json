{
  "manifest_version": 3,
  "version": "1.0",
  "name": "Lazy Prompt Bot",
  "description": "For all the lazy prompt engineers",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://chat.deepseek.com/a/chat/*",
    "https://claude.ai/*"
  ],
  "icons": {
    "128": "bot.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.deepseek.com/a/chat/*",
        "https://claude.ai/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "bot.png"
    }
  }
}
